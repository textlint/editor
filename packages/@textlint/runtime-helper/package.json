{
    "name": "@textlint/runtime-helper",
    "version": "0.17.1",
    "description": "A runtime helper",
    "homepage": "https://github.com/textlint/editor/tree/master/packages/@textlint/runtime-helper/",
    "bugs": {
        "url": "https://github.com/textlint/editor/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/textlint/editor.git"
    },
    "license": "MIT",
    "author": "azu",
    "sideEffects": false,
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "files": [
        "bin/",
        "lib/"
    ],
    "scripts": {
        "build": "tsc -p .",
        "clean": "rimraf lib/",
        "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
        "prepublish": "npm run --if-present build",
        "watch": "tsc -p . --watch"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "dependencies": {
        "@kvs/env": "^1.1.0",
        "@textlint/config-loader": "^15.0.1",
        "@textlint/kernel": "^15.0.1",
        "@textlint/module-interop": "^15.0.1",
        "@textlint/types": "^15.0.1",
        "@textlint/utils": "^15.0.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.3",
        "mocha": "^11.7.0",
        "prettier": "^3.6.0",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "ts-node-test-register": "^10.0.0",
        "typescript": "^5.8.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
