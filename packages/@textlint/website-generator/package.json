{
    "name": "@textlint/website-generator",
    "version": "0.17.1",
    "description": "Website generator using @textlint/script-compiler",
    "keywords": [
        "textlint"
    ],
    "homepage": "https://github.com/textlint/editor/tree/master/packages/@textlint/website-generator/",
    "bugs": {
        "url": "https://github.com/textlint/editor/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/textlint/editor.git"
    },
    "license": "MIT",
    "author": "azu",
    "sideEffects": false,
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "bin": {
        "textlint-website-generator": "./bin/cmd.js"
    },
    "files": [
        "bin/",
        "lib/",
        "module",
        "template"
    ],
    "scripts": {
        "build": "tsc -p . && tsc --project ./tsconfig.module.json",
        "clean": "rimraf lib/ module/",
        "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
        "prepublish": "npm run --if-present build",
        "generate-template": "node tools/website-generator.mjs",
        "watch": "tsc -p . --watch",
        "prepack": "npm run generate-template"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "dependencies": {
        "@textlint/script-compiler": "^0.17.1",
        "meow": "^9.0.0",
        "read-pkg": "^5.2.0",
        "textchecker-element": "^0.17.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.3",
        "@types/rimraf": "4.0.5",
        "mocha": "^11.7.0",
        "prettier": "^3.6.0",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "ts-node-test-register": "^10.0.0",
        "typescript": "^5.8.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
